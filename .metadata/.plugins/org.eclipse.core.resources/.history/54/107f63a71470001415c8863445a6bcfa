import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.event.MouseEvent;

import javax.swing.JLabel;
import javax.swing.JTextField;

public class XBin extends Term {

	JLabel xLabel;

	public XBin() {
		super();
		edit.setText("?");
		edit.setHorizontalAlignment(JTextField.LEFT);
		edit.setLocation(W - 25, 0);
		xLabel = new JLabel("X=");
		xLabel.setFont(new Font("SansSerif", Font.BOLD, 20));
		xLabel.setHorizontalAlignment(JTextField.CENTER);
		xLabel.setBounds(-10, 0, W, W);
		add(xLabel);
	}

	@Override
	protected void paintComponent(Graphics g) {
		super.paintComponent(g);
		Graphics2D g2 = (Graphics2D) g;
		g2.setColor(Color.pink);
		g2.fill(circle);
	}

	@Override
	public int updateWeight() {
		if (edit.getText().toString().equals("?")) {
			return 0;
		} else {
			return super.updateWeight();
		}
	}

	public XBin cloneMe() {
		XBin x1 = new XBin();
		x1.weight = weight;
		x1.setBounds(getLocation().x, getLocation().y, getSize().width,
				getSize().height);
		return x1;
	}
}
