import java.awt.Color;
import java.awt.Font;
import java.awt.Point;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.awt.geom.Ellipse2D;

import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.JTextField;

abstract class Term extends JPanel implements MouseListener {

	int weight, rotateDir;
	Ellipse2D circle;
	JTextField edit;
	public static final int W = 60;

	public Term() {

		setLayout(null);
		setOpaque(false);
		edit = new JTextField();
		edit.setForeground(Color.white);
		edit.setOpaque(false);
		edit.setBorder(null);
		edit.setDocument(new LengthRestrictedDocument(2));
		edit.setHorizontalAlignment(JTextField.CENTER);
		edit.setFont(new Font("SansSerif", Font.BOLD, 20));
		edit.setSize(W, W);
		edit.setVisible(true);
		edit.addMouseListener(this);

		circle = new Ellipse2D.Double();
		circle.setFrame(0, 0, W, W);

		add(edit);
	}

	public Point rotate(Point p) {

		double theta = Math.toRadians(ScalePanel.tiltDir * 25);
		double ox = ScalePanel.center.getX();
		double oy = ScalePanel.center.getY();

		int newX = (int) (Math.cos(theta) * (p.x - ox) - Math.sin(theta)
				* (p.y - oy) + ox);
		int newY = (int) (Math.sin(theta) * (p.x - ox) + Math.cos(theta)
				* (p.y - oy) + oy);
		return new Point(newX, newY);
	}

	public int updateWeight() {
		try {
			String val = edit.getText().toString();
			weight = Integer.parseInt(val);
		} catch (NumberFormatException nfe) {
			JOptionPane.showMessageDialog(this, "Fix your input!");
		}
		return weight;
	}

	public abstract Term cloneMe();

	@Override
	public void mouseClicked(MouseEvent me) {

	}

	@Override
	public void mouseEntered(MouseEvent arg0) {
	}

	@Override
	public void mouseExited(MouseEvent arg0) {
	}

	@Override
	public void mousePressed(MouseEvent arg0) {
	}

	@Override
	public void mouseReleased(MouseEvent arg0) {
	}
}