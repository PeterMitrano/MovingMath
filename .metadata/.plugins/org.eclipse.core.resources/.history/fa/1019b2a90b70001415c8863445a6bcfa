import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;

public class Constant extends Term {

	public Constant(MoveTermListener mtl) {
		super(mtl);
		edit.setText("1");
	}

	@Override
	protected void paintComponent(Graphics g) {
		super.paintComponent(g);
		Graphics2D g2 = (Graphics2D) g;
		int s = (int) (W * (Math.sqrt(coefficient + 1)));
		rectangle.setBounds(0, 0, s, s);
		g2.setColor(Color.orange);
		g2.fill(rotate(rectangle));
	}

	public Constant cloneMe() {
		Constant x1 = new Constant(mtl);
		x1.weight = weight;
		x1.coefficient = coefficient;
		return x1;
	}
}
